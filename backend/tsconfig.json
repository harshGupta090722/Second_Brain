{
  "compilerOptions": {
    // File Layout
    "jsx": "react-jsx",
    "rootDir": "./src",
    "outDir": "./dist",
    // Environment Settings
    "module": "nodenext", // use commonjs for Node.js backend
    "moduleResolution": "nodenext",
    "target": "es2022", // modern JS, stable for Node 20+
    "lib": [
      "esnext"
    ],
    "types": [
      "node"
    ], // ðŸ‘ˆ explicitly include node types
    // Type Declarations
    "typeRoots": [
      "./node_modules/@types"
    ],
    // Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    // Recommended Options
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}